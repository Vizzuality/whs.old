<% content_for :head_libraries do %>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
  <%= javascript_include_tag 'whs/features/index' %>
<% end %>
<div class="content_box" id="explore">
  <div class="top"></div>
  <div class="middle">
    <h1><span>More than 900 beautiful</span></h1>
    <h1 class="down"><span>places to see</span></h1>
    <div class="map_container">
      <div id="map"></div>
      <div id="zoomControl">
        <a id="zoomin" href="#"></a>
        <a id="zoomout" href="#"></a>
      </div>
    </div>
    <div id="filter">
      <%= form_tag features_path, :method => :get, :id => 'ajaxSearch' do %>
        <%= hidden_field_tag :type, params[:type] %>
        <%= hidden_field_tag :criteria, params[:criteria] %>
        <div class="input">
          <div class="input_left"></div>
          <div class="input_center">
            <%= label_tag :q, 'Search...', :class => params[:q] ? 'hidden' : '' %>
            <%= text_field_tag :q, params[:q], :size => 20 %>
          </div>
          <div class="input_right"></div>
        </div>
        <a id="all_selector" class="type_selector <%= all_selected? %>" href="<%= features_path :type => '' %>">All</a>
        <a id="natural_selector" class="type_selector <%= natural_selected? %>" href="<%= features_path :type => 'natural' %>">Natural</a>
        <a id="cultural_selector" class="type_selector <%= cultural_selected? %>" href="<%= features_path :type => 'cultural' %>">Cultural</a>
        <div id="criteria_select">
          <span><a id="criteria_label" href="#">Search by criteria</a></span>
          <ul>
            <li><a id="i"    class="criteria" href="<%= features_path :criteria => '[i]' %>"><%= I18n.t("feature.criteria.i") %></a></li>
            <li><a id="ii"   class="criteria" href="<%= features_path :criteria => '[ii]' %>"><%= I18n.t("feature.criteria.ii") %></a></li>
            <li><a id="iii"  class="criteria" href="<%= features_path :criteria => '[iii]' %>"><%= I18n.t("feature.criteria.iii") %></a></li>
            <li><a id="iv"   class="criteria" href="<%= features_path :criteria => '[iv]' %>"><%= I18n.t("feature.criteria.iv") %></a></li>
            <li><a id="v"    class="criteria" href="<%= features_path :criteria => '[v]' %>"><%= I18n.t("feature.criteria.v") %></a></li>
            <li><a id="vi"   class="criteria" href="<%= features_path :criteria => '[vi]' %>"><%= I18n.t("feature.criteria.vi") %></a></li>
            <li><a id="vii"  class="criteria" href="<%= features_path :criteria => '[vii]' %>"><%= I18n.t("feature.criteria.vii") %></a></li>
            <li><a id="viii" class="criteria" href="<%= features_path :criteria => '[viii]' %>"><%= I18n.t("feature.criteria.viii") %></a></li>
            <li><a id="ix"   class="criteria" href="<%= features_path :criteria => '[ix]' %>"><%= I18n.t("feature.criteria.ix") %></a></li>
            <li><a id="x"    class="criteria" href="<%= features_path :criteria => '[x]' %>"><%= I18n.t("feature.criteria.x") %></a></li>
          </ul>
        </div>
        <a id="mosaic_selector" class="selected" href="#"></a>
        <a id="list_selector" href="#"></a>
      <% end %>
    </div>
    <div id="results">
      <%= render :partial => 'features' %>
    </div>
  </div>
  <div class="bottom"></div>
</div>

