<div class="content_box" id="mosaic">
  <div class="top"></div>
  <div class="middle">
    <div class="content">
      <h2>RethinkWHS.org</h2>
        <h1><span>Discovering the most</h1>
        <h1 class="down"><span>beautiful places in the world</span></h1>
        <a href="/features/<%=@random_features[0].id%>">
        <div id="big_image">
            <% if @random_features[0].gallery && @random_features[0].gallery.gallery_entries.any? %>
              <%= image_tag @random_features[0].gallery.gallery_entries.first.image.thumbnail(:large).url, :alt => @random_features[0].title %>
              <div class="big_label">
                <p class="place"><%=truncate(@random_features[0].title,:length=>60,:delimiter=>"...")%></p>
                <p class="distance">4 hours by car from Madrid</p>
              </div>

            <% else %>
              <img src="/images/default_big.png">
            <% end %>
        </div>
        </a>

        <ul id="image_list">
        <% @random_features[1..6].each do |feature|%>
        <li class="mosaic_element<%= cycle('',' middle','', :name => 'mosaic') %>">
          <a href="/features/<%=feature.id%>">
          <div class="mosaic_element_div">

            <% if feature.gallery && feature.gallery.gallery_entries.any? %>
              <%= image_tag feature.gallery.gallery_entries.first.image.thumbnail(:small).url, :alt => feature.title %>
            <% else %>
              <img src="/images/default_mosaic.png">
            <% end %>

            <div class="mosaic_label">
              <p class="place"><%=truncate(feature.title,:length=>60,:delimiter=>"...")%></p>
              <p class="distance">4 hours by car from Madrid</p>
            </div>
          </div>
          </a>
        </li>
        <li class="separator<%= cycle('','',' horizontal', :name => 'separator') %>"></li>
        <% end %>
        </ul>
      </div>
  </div>
  <div class="bottom"></div>



</div>

<div class="content_box" id="more_sites">
  <div class="top"></div>
  <div class="middle">
    <div class="content">
    <h2>Browse more sites around you</h2>
      <ul>
        <% @closests_features.each do |feature, itinerary|%>
        <li <%= cycle('','','class=\'last\'', :name => 'classname') %> >
          <%= link_to truncate(feature.title,:length => 35, :delimiter => '...'), feature, :title => feature.title %>
          <p><%= itinerary[:time] %> by <%= itinerary[:type] %> from <%= @user_city %></p>
        </li>
        <% end %>
      </ul>
    </div>

    <div class="footer">
        <a class="bottom_link" href="/features/">Or explore the world map</a>
    </div>
  </div>
  <div class="bottom"></div>
</div>